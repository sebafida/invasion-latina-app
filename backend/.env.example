# ========================================
# INVASION LATINA - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and replace with your PRODUCTION keys

# ============ MONGODB ============
MONGO_URL=mongodb://localhost:27017
MONGO_DB=invasion_latina

# ============ STRIPE (PAYMENT) ============
# Get your keys from: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use TEST keys during development, LIVE keys in production
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# ============ FIREBASE (REALTIME + AUTH) ============
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============ APPLICATION SETTINGS ============
APP_ENV=development
SECRET_KEY=your-jwt-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,exp://localhost:8081

# ============ VENUE SETTINGS ============
VENUE_LATITUDE=50.8486
VENUE_LONGITUDE=4.3722
VENUE_RADIUS_METERS=100

# ============ EVENT SETTINGS ============
EVENT_START_HOUR=23
EVENT_END_HOUR=6

# ============ EMAIL (Optional - for notifications) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password